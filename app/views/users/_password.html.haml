.remote
  - remote_form_for(@user, :url => change_password_user_path(@user), :html => one_submit_only(:user)) do |f|
    = link_to_close password_user_path(@user)
    = f.error_messages
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top }
            .label.req.top #{t :current_password}:
            = password_field_tag :current_password, nil, :style => "width:240px"
          %td{ :colspan => 2 }= spacer
        %tr
          %td{ :valign => :top }
            .label.req #{t :new_password}:
            = f.password_field :password, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label.req #{t :password_confirmation}:
            = f.password_field :password_confirmation, :style => "width:240px"
    
    .buttonbar
      = f.submit t(:change_password)
      #{t :or}
      = link_to_cancel password_user_path(@user)
%br
